<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="360.0" prefWidth="480.0" xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/" fx:controller="flash.cards.Controller">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="File">
          <items>
            <MenuItem mnemonicParsing="false" onAction="#clearDeck" text="New Deck" />
            <MenuItem mnemonicParsing="false" onAction="#openDeck" text="Open Deck" />
            <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" onAction="#exportCSV" text="Export CSV" />
            <MenuItem mnemonicParsing="false" onAction="#quit" text="Quit" />
          </items>
        </Menu>
            <Menu mnemonicParsing="false" text="Edit">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#goToCard" text="Go to Card" />
                  <MenuItem mnemonicParsing="false" onAction="#newCard" text="New Card" />
                  <MenuItem fx:id="editMenuItem" mnemonicParsing="false" onAction="#editCard" text="Edit Card" />
                  <MenuItem fx:id="saveMenuItem" disable="true" mnemonicParsing="false" onAction="#saveCard" text="Save Card" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" onAction="#deleteCard" text="Delete Card" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Learn">
               <items>
                  <MenuItem fx:id="timerMenuItem" mnemonicParsing="false" onAction="#setTimer" text="Start Timer" />
                  <MenuItem mnemonicParsing="false" onAction="#shuffleDeck" text="Shuffle Deck" />
                  <MenuItem mnemonicParsing="false" onAction="#showTimerLog" text="History" />
               </items>
            </Menu>
        <Menu mnemonicParsing="false" text="Help">
          <items>
            <MenuItem mnemonicParsing="false" onAction="#aboutApp" text="About" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <AnchorPane focusTraversable="true" maxHeight="-1.0" maxWidth="-1.0" prefHeight="320.0" prefWidth="480.0" VBox.vgrow="ALWAYS">
         <children>
            <TextArea fx:id="questionText" editable="false" focusTraversable="false" layoutX="88.0" layoutY="114.0" prefHeight="60.0" prefWidth="303.0" wrapText="true" />
            <Label focusTraversable="false" layoutX="212.0" layoutY="80.0" text="Question">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label focusTraversable="false" layoutX="217.0" layoutY="188.0" text="Answer">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextArea fx:id="answerText" editable="false" focusTraversable="false" layoutX="88.0" layoutY="221.0" prefHeight="60.0" prefWidth="303.0" wrapText="true" />
            <Button fx:id="prevButton" focusTraversable="false" layoutX="88.0" layoutY="185.0" mnemonicParsing="false" onAction="#prevCard" prefHeight="25.0" prefWidth="40.0" text="←" />
            <Button fx:id="nextButton" focusTraversable="false" layoutX="351.0" layoutY="185.0" mnemonicParsing="false" onAction="#nextCard" prefHeight="25.0" prefWidth="40.0" text="→" />
            <Button fx:id="showButton" focusTraversable="false" layoutX="210.0" layoutY="288.0" mnemonicParsing="false" onAction="#showAnswer" prefHeight="25.0" prefWidth="60.0" text="Show" />
            <Label focusTraversable="false" layoutX="10.0" layoutY="17.0" text="Deck:">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label fx:id="deckLabel" focusTraversable="false" layoutX="47.0" layoutY="17.0" text="-">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label fx:id="timerLabel" layoutX="418.0" layoutY="17.0" text="00:00:00">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label fx:id="currentLabel" layoutX="10.0" layoutY="37.0" text="0 / 0">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
         </children>
    </AnchorPane>
  </children>
</VBox>
