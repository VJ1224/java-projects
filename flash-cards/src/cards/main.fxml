<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="360.0" prefWidth="480.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cards.Controller">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="File">
          <items>
            <MenuItem mnemonicParsing="false" onAction="#clearSet" text="New Set" />
            <MenuItem mnemonicParsing="false" onAction="#openSet" text="Open Set" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" onAction="#quit" text="Quit" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
          <items>
            <MenuItem mnemonicParsing="false" text="About Flash Cards" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="320.0" prefWidth="480.0" VBox.vgrow="ALWAYS">
         <children>
            <TextArea fx:id="questionText" editable="false" focusTraversable="false" layoutX="91.0" layoutY="90.0" prefHeight="60.0" prefWidth="303.0" />
            <Label focusTraversable="false" layoutX="215.0" layoutY="56.0" text="Question">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label focusTraversable="false" layoutX="220.0" layoutY="164.0" text="Answer">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextArea fx:id="answerText" editable="false" focusTraversable="false" layoutX="91.0" layoutY="197.0" prefHeight="60.0" prefWidth="303.0" />
            <Button fx:id="clearButton" layoutX="406.0" layoutY="14.0" mnemonicParsing="false" onAction="#newCard" text="New Card" />
            <Button fx:id="prevButton" layoutX="91.0" layoutY="277.0" mnemonicParsing="false" onAction="#prevCard" prefHeight="25.0" prefWidth="60.0" text="Prev" />
            <Button fx:id="showButton" layoutX="210.0" layoutY="277.0" mnemonicParsing="false" onAction="#showAnswer" prefHeight="25.0" prefWidth="60.0" text="Show" />
            <Button fx:id="nextButton" layoutX="334.0" layoutY="277.0" mnemonicParsing="false" onAction="#nextCard" prefHeight="25.0" prefWidth="60.0" text="Next" />
            <Label focusTraversable="false" layoutX="14.0" layoutY="17.0" text="Set:">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label fx:id="setName" focusTraversable="false" layoutX="44.0" layoutY="17.0" text="-">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
         </children>
    </AnchorPane>
  </children>
</VBox>
